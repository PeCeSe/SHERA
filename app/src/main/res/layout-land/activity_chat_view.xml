<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollViewChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:fillViewport="true"
        android:layout_above="@+id/InnerRelativeLayout">

        <TextView
            android:id="@+id/chat_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" />

    </ScrollView>

    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:text="@string/chat_send"
            android:id="@+id/chat_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"></Button>

        <EditText
            android:id="@+id/chat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:minHeight="120dp"
            android:inputType="textMultiLine|textCapSentences"
            android:hint="@string/chat_hint"
            android:maxLength="500"
            android:maxLines="3"
            android:layout_toLeftOf="@id/chat_send_button"
            android:layout_alignBottom="@id/chat_send_button"
            android:layout_alignParentTop="true"></EditText>

    </RelativeLayout>

</RelativeLayout>