                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.gruppe2.shera.Map" />
        </activity>
        <activity
            android:name=".Events"
            android:label="@string/title_activity_events"
            android:parentActivityName=".Map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.gruppe2.shera.Map" />
        </activity>
        <activity
            android:name=".Event"
            android:label="@string/title_activity_event"
            android:parentActivityName=".Map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.gruppe2.shera.Map" />
        </activity>
    </application>

</manifest>